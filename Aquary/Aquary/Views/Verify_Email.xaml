<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aquary.Views.Verify_Email"
                 Title="{Binding Title}">
    <StackLayout Spacing="3" Padding="15">

        <Label Text="WRITE YOUR EMAIL BELOW TO RESET PASSWORD!" FontSize="Medium" />
        
        <Label Text="Enter Code" FontSize="Medium" />
        <Entry x:Name="Code" Text="" FontSize="Medium" />
       
        <Button Text="Verify"  HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"></Button>
        <Button Text="Resend OTP"  HorizontalOptions="FillAndExpand" Clicked="Resend_Clicked_1"></Button>


    </StackLayout>

</ContentPage>